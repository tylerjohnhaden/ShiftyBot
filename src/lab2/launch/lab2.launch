<launch>
    <arg name="part" default="1" />

    <node name="joy_node" pkg="joy" type="joy_node" respawn="true">
        <param name="dev" type="string" value="/dev/input/js0" />
    </node>

    <node name="shifty_node" pkg="lab2" type="shifty$(arg part).py" output="screen"/>
    <node name="mapper_node" pkg="lab2" type="mapper.py" output="screen"/>
</launch>
